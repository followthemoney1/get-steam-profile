<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ddpc.ggway">

    <application
        android:name=".GGWayApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/GGWay">

        <activity
            android:name="com.ddpc.ggway.ui.activity.home.HomeActivity"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.ddpc.ggway.ui.activity.SettingsActivity"
            android:theme="@style/Translucent.BottomSheetStyle" />

        <activity
            android:name="com.ddpc.ggway.ui.activity.user.update.UserProfileActivity"
            android:configChanges="orientation|screenSize" />
    </application>

</manifest>