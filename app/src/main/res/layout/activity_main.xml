<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    tools:context=".ui.activity.MainActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardSearch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/searchSize"
        android:layout_marginTop="@dimen/padding_normal"
        android:layout_marginLeft="@dimen/padding_normal"
        android:layout_marginRight="@dimen/padding_normal"
        android:background="@color/background_dark"
        android:elevation="1dp"
        android:focusableInTouchMode="true"
        android:focusedByDefault="false"
        app:cardCornerRadius="@dimen/padding_large">

        <LinearLayout
            android:id="@+id/searchBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"

            android:orientation="horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_normal"
                android:layout_weight="1"
                android:background="@null"
                android:singleLine="true"
                android:textColor="@color/background_dark"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
               >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/padding_normal"
                    android:layout_marginRight="@dimen/padding_normal"
                    android:src="@drawable/ic_search" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <com.ddpc.ggway.ui.widget.BackgroundMainAnimatedView
        android:id="@+id/backgroundAnimatedView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="@dimen/spacing_large"
        android:layout_above="@+id/arrowUp"
        android:layout_alignParentBottom="true" />

    <org.apmem.tools.layouts.FlowLayout xmlns:f="http://schemas.android.com/apk/res/com.ddpc.ggway"
        android:id="@+id/flowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardSearch"
        android:layout_marginLeft="@dimen/padding_normal"
        android:layout_marginTop="@dimen/padding_normal"
        android:gravity="left"
        android:orientation="horizontal"
        f:layoutDirection="ltr"
        f:weightDefault="1.0" />
    <ImageView
        android:id="@+id/arrowUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:alpha="1"
        android:src="@drawable/ic_arrow_up"
        android:tint="@color/white" />
</RelativeLayout>
