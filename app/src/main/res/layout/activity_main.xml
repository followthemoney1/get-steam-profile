<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    tools:context=".ui.activity.home.HomeActivity">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomMenu"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/arrowUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_arrow_up"
        android:tint="@color/white"/>

    <LinearLayout
        android:id="@+id/bottomMenu"
        android:background="@color/icon_white"
        android:paddingTop="@dimen/padding_pre_normal"
        android:paddingBottom="@dimen/padding_pre_normal"
        android:elevation="@dimen/spacing_normal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/search"
            android:layout_weight="1"
            android:tint="@color/white"
            android:alpha="1"
            android:src="@drawable/ic_search"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <ImageView
            android:layout_weight="1"
            android:tint="@color/white"
            android:alpha="0.4"
            android:src="@drawable/ic_mail"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <ImageView
            android:layout_weight="1"
            android:tint="@color/white"
            android:alpha="0.4"
            android:src="@drawable/ic_person"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <ImageView
            android:layout_weight="1"
            android:tint="@color/white"
            android:alpha="0.4"
            android:src="@drawable/ic_settings"
            android:layout_width="24dp"
            android:layout_height="24dp" />
    </LinearLayout>
</RelativeLayout>
